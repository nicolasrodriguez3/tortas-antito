<style>
  .separador {
    width: 100%;
    height: 50px;
  }

  .anuncios {
    display: grid;
    justify-items: center;
    padding: 50px 1rem;
  }
  .anuncio {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background: var(--bg-color-sec);
    color: var(--text-color);
    border: 2px solid var(--text-color);
    border-radius: 8px;
    padding: 10px;
    font-size: 1.2rem;
    font-weight: 700;
    text-align: center;
    width: 100%;
    max-width: 350px;
    height: 150px;
  }
  .anuncio svg {
    width: 48px;
    flex-shrink: 0;
  }

  @media screen and (min-width: 768px) {
    .anuncios {
      grid-template-columns: repeat(2, 1fr);
    }
    .only-mobile {
      display: none;
    }
  }
  @media screen and (max-width: 768px) {
    .only-desktop {
      display: none;
    }
  }
</style>
